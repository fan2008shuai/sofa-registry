<?xml version="1.0" encoding="UTF-8"?>

<!-- Logback config -->

<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{ISO8601}]%-4relative [%thread] %-5level %logger{35} [%M#%L]  - %msg %n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>

